<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CustomNumberPopup" t-inherit="point_of_sale.NumberPopup" t-inherit-mode="extension">
            <xpath expr="//div[hasclass('popup-numpad')]" position="replace">
                <br />
                <br />

                <t>
                    <button class="mode-button add" t-on-mousedown.prevent="sendInput('+10')" style="margin-right:30px; margin-top:30px;">+10</button>

                    <button class="mode-button add" t-on-mousedown.prevent="sendInput('+25')" style="margin-bottom:40px;">+25</button>
                </t>
                <br />
                <br />

                <br />
                <br />
                <br />
                <br />
                <br />
            </xpath>
    </t>
</templates>
